<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Order">
        <property name="store" type="string"/>
    </transfer>

    <transfer name="MerchantUser">
        <property name="idMerchant" type="int"/>
    </transfer>

    <transfer name="MerchantOrderCounts">
        <property name="new" type="int"/>
        <property name="total" type="int"/>
        <property name="totalPerStore" type="int[]" associative="true"/>
    </transfer>

    <transfer name="DashboardCard">
        <property name="actionButtons" type="DashboardActionButton[]" singular="actionButton"/>
        <property name="title" type="string"/>
        <property name="content" type="string"/>
    </transfer>

    <transfer name="DashboardActionButton">
        <property name="title" type="string"/>
        <property name="url" type="string"/>
    </transfer>

</transfers>
